{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"outDir": "dist",
		"lib": [
			"es2015",
			"dom"
		],
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": [
		"./**/*"
	],
	"exclude": [
		"node_modules",
		"./node_modules/**/*",
		"./coverage/**/*",
		"./src/test",
		"./dist",
		"./dist/**/*",
		"./**/test"
	]
}